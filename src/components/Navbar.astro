---
// src/components/Navbar.astro
---

<nav class="bg-black text-white px-4 py-4 flex items-center justify-between">
  <!-- 左侧 Logo + 名称 -->
  <div class="flex items-center space-x-2">
    <img src="/images/logo.PNG" alt="Dragon Umrah Logo" class="h-10 object-contain" />
    <span class="text-xl font-bold">Dragon Umrah</span>
  </div>

  <!-- Desktop 菜单 -->
  <ul id="menu" class="hidden md:flex space-x-6">
    <li><a href="#home">Home</a></li>
    <li><a href="#about">About</a></li>
    <li><a href="#services">Services</a></li>
    <li><a href="#testimonials">Testimonials</a></li>
    <li><a href="#contact">Contact</a></li>
  </ul>

  <!-- Mobile Toggle Button -->
  <button id="menu-toggle" class="md:hidden border px-3 py-1 rounded">
    ☰
  </button>

  <script is:inline>
    const toggle = document.getElementById('menu-toggle');
    const menu = document.getElementById('menu');

    toggle.addEventListener('click', () => {
      menu.classList.toggle('hidden');
    });

    document.querySelectorAll('#menu a').forEach(link => {
      link.addEventListener('click', () => {
        menu.classList.add('hidden');
      });
    });
  </script>
</nav>